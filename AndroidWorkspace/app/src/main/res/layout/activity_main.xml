<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="0dp"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3F51B5">

        <LinearLayout
            android:id="@+id/updateLocation"
            android:layout_width="225dp"
            android:layout_height="60dp"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/btn_gps"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="22dp"
                android:background="#3F51B5"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/main_icon_gps2" />

            <TextView
                android:id="@+id/tv_addr"
                android:layout_width="179dp"
                android:layout_height="31dp"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="191dp"
                android:layout_marginRight="0dp"
                android:textColor="#ffffff"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_search"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="20dp"
                android:background="#3F51B5"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/main_icon_search2" />

            <ImageButton
                android:id="@+id/btn_like"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="20dp"
                android:background="#3F51B5"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/card_list_fav2" />

            <ImageButton
                android:id="@+id/btn_alram"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="0dp"
                android:background="#3F51B5"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/main_icon_alram2" />
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="0dp"
        android:background="#3F51B5"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:background="#FFFFFF" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0f1f5">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

        </androidx.recyclerview.widget.RecyclerView>


    </ScrollView>
    <!--    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/menu_bottom"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:background="#3F51B5"
            app:itemIconTint="#FFFFFF"
            app:menu="@menu/menu_bottom" />-->
    <!--app:itemTextColor="@color/wallet_bright_foreground_disabled_holo_light"-->

</LinearLayout>