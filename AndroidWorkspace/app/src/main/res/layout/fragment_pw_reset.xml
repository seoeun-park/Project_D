<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PwResetFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <EditText
            android:id="@+id/etNewPw"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:ems="10"
            android:hint="새로운 비밀번호 입력"
            android:inputType="number"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etNewPwChk"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:ems="10"
            android:hint="새로운 비밀번호 확인"
            android:inputType="number"
            android:textSize="16sp" />

        <TextView
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="27dp"
            android:text="비밀번호는 최소 8자리 이상 \n알파벳 소문자, 숫자 및 특수 문자를 포함해주세요."
            android:textSize="13sp" />

        <Button
            android:id="@+id/btnResetPw2"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="0dp"
            android:background="#3F51B5"
            android:text="비밀번호 재설정 완료"
            android:textColor="#FFFFFF" />


    </LinearLayout>

</FrameLayout>